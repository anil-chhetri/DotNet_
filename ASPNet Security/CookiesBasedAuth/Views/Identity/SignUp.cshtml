@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<h2 class="text-center"> Sign Up for new users. </h2>

<form asp-action="SignUp" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-floating my-3">
        <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
        <label asp-for="Email">Email address</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
        <label asp-for="Password">Password</label>
        <span asp-validation-for="Password" class="Text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control" asp-for="ReEnterPassword" placeholder="Re Enter your Password">
        <label asp-for="ReEnterPassword">Password</label>
        <span asp-validation-for="ReEnterPassword" class="text-danger"></span>
    </div>

    <div class="form-floating my-3">
        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Phone Number">
        <label asp-for="PhoneNumber">Phone Number</label>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group my-3">
        <button type="submit" class="btn btn-primary" style="Width:200px"> Sign Up</button>
    </div>
</form>
