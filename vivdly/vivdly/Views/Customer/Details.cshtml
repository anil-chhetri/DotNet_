@model vivdly.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> @Model.Name </h2>

<ul class="list-group">
    <li class="list-group-item">  MemberShip Type: @Model.MembershipType.Name </li>

    @if (Model.DateOfBirth != null)
    {
        <li class="list-group-item">  Date Of Birth: @Model.DateOfBirth.Value.ToString("dddd, dd MMMM yyyy") </li>

    }


</ul>


